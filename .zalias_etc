#!/usr/bin/zsh
# Overrides keybinding and alias of $ZSH/oh-my-zsh.sh (which is sourced in ~/.zshrc)
# ~/.zprofile is sourced before ~/.zshrc
# Thus putting the following there is not an option

doc="$HOME/Dokumente"
pi=pi@192.168.0.185
montage=/c/oko/montage/main/mondb/flexwave_fx2/montage

export gitignore_folder="$doc/.gitignore-files"
export primary_remote_host=$pi

bindkey '^h' backward-delete-word

alias a='atom .'
alias ag='alias|grep'
alias diff=colordiff
alias dirs='dirs -v'
alias e='explorer .'
alias glog='git lg'
alias fcsp='find -name "*.csproj" 2>/dev/null'
alias h=history
alias la='ls -a'
alias open=cygstart
alias pi='ssh $pi'
alias tcs='tree --prune -P "*.cs|*.xaml|*.csproj"'
alias tree='tree -a -I "bin|Debug|Release|.git"'

alias -g ne='2>/dev/null'
alias -s pl=perl
alias -s sh=bash
